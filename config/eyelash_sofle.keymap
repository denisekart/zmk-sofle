#define ZMK_POINTING_DEFAULT_MOVE_VAL 1200  // 600
#define ZMK_POINTING_DEFAULT_SCRL_VAL 25   // 10

#include <input/processors.dtsi>
#include <zephyr/dt-bindings/input/input-event-codes.h>
#include <behaviors.dtsi>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/outputs.h>
#include <dt-bindings/zmk/pointing.h>
#include <dt-bindings/zmk/rgb.h>
#include "leader.dtsi"


&mmv_input_listener { input-processors = <&zip_xy_scaler 2 1>; };

&msc_input_listener { input-processors = <&zip_scroll_scaler 1 1>; };

&sk {
    release-after-ms = <1000>;
    quick-release;
};

&msc {
    acceleration-exponent = <1>;      // 0
    time-to-max-speed-ms = <100>;       // 300
    delay-ms = <0>;                   // 0
};

&mmv {
    time-to-max-speed-ms = <500>;
    acceleration-exponent = <1>;
    trigger-period-ms = <16>;
};

&soft_off { hold-time-ms = <2000>; };

/ {
    scroll_encoder: scroll_encoder {
        compatible = "zmk,behavior-sensor-rotate";
        #sensor-binding-cells = <0>;
        bindings = <&msc SCRL_DOWN>, <&msc SCRL_UP>;

        tap-ms = <100>;
    };

    select_encoder: select_encoder {
        compatible = "zmk,behavior-sensor-rotate";
        #sensor-binding-cells = <0>;
        bindings = <&kp LC(RIGHT)>, <&kp LC(LEFT)>;

        tap-ms = <100>;
    };

    behaviors {

        td_curly: td_curly {
            compatible = "zmk,behavior-tap-dance";
            #binding-cells = <0>;
            tapping-term-ms = <200>;
            bindings = <&kp LBRC>, <&kp RBRC>;
        };

        td_square: td_square {
            compatible = "zmk,behavior-tap-dance";
            #binding-cells = <0>;
            tapping-term-ms = <200>;
            bindings = <&kp LBKT>, <&kp RBKT>;
        };

        td_arrow: td_arrow {
            compatible = "zmk,behavior-tap-dance";
            #binding-cells = <0>;
            tapping-term-ms = <200>;
            bindings = <&kp LPAR>, <&kp LBKT>, <&kp LT>;
        };


        td_lbrc: td_lbrc {
            compatible = "zmk,behavior-tap-dance";
            #binding-cells = <0>;
            tapping-term-ms = <200>;
            bindings = <&kp LPAR>, <&kp LBKT>, <&kp LT>;
        };

        td_rbrc: td_rbrc {
            compatible = "zmk,behavior-tap-dance";
            #binding-cells = <0>;
            tapping-term-ms = <200>;
            bindings = <&kp RPAR>, <&kp RBKT>, <&kp GT>;
        };

        td_pst: td_pst {
            compatible = "zmk,behavior-tap-dance";
            #binding-cells = <0>;
            tapping-term-ms = <200>;
            bindings = <&kp LC(V)>, <&kp LG(V)>; 
        };

        td_alt_leader: td_alt_leader {
            compatible = "zmk,behavior-tap-dance";
            #binding-cells = <0>;
            tapping-term-ms = <200>;
            bindings = <&sk LALT>, <&leader1>; 
        };

        mo_sk: behavior_mo_sk {
            compatible = "zmk,behavior-hold-tap";
            #binding-cells = <2>;
            flavor = "hold-preferred";
            tapping-term-ms = <200>;
            bindings = <&mo>, <&sk>;
        };

        mo_lead: mo_lead {
            compatible = "zmk,behavior-hold-tap";
            #binding-cells = <2>;
            flavor = "hold-preferred";
            tapping-term-ms = <200>;
            bindings = <&mo>, <&leader1>;
        };
  
        mt_long: mt_long {
            compatible = "zmk,behavior-hold-tap";
            #binding-cells = <2>;
            flavor = "tap-preferred";
            tapping-term-ms = <260>;
            bindings = <&kp>, <&kp>;
            display-name = "Mod-Tap";
        };
    };


    combos {
        compatible = "zmk,combos";

        softoff {
            bindings = <&soft_off>;
            key-positions = <14 28 40>;
        };

        /* combo_alt {
            bindings = <&sk LALT>;
            key-positions = <26 39>;
        }; */
    };

    keymap {
        compatible = "zmk,keymap";

        /* =====================================================================
        * LAYER0 — Base
        * ===================================================================== */

        layer0 {
            bindings = <
&gresc      &kp N1     &kp N2        &kp N3        &kp N4  &kp N5       &kp UP_ARROW     &kp N6     &kp N7                  &kp N8     &kp N9               &kp N0          &kp BACKSPACE
&kp TAB     &kp Q      &kp W         &kp E         &kp R   &kp T        &kp DOWN_ARROW   &kp Z      &kp U                   &kp I      &kp O                &kp P           &kp EQUAL
&sk LCTRL   &kp A      &kp S         &kp D         &kp F   &kp G        &kp LEFT_ARROW   &kp H      &kp J                   &kp K      &kp L                &kp APOS        &kp SEMI
&sk LSHFT   &kp Y      &kp X         &kp C         &kp V   &kp B        &kp RIGHT_ARROW  &kp N      &kp M                   &kp COMMA  &kp DOT              &kp QUESTION    &kp MINUS
&kp C_MUTE  &kp LCTRL  &kp LEFT_GUI  &sk LALT      &mo_sk 1 LSHFT       &kp SPACE    &kp ENTER   &kp ENTER                  &mo_lead 2 0    &mt_long LC(BACKSPACE) BACKSPACE   &sk RIGHT_ALT    &key_repeat
            >;

            sensor-bindings = <&select_encoder>;
            display-name = "BASE";
        };
        
        /* =====================================================================
        * LAYER1 — Nav / Editing
        * ===================================================================== */
        layer_1 {
            bindings = <
&kp GRAVE       &kp F1           &kp F2             &kp F3             &kp F4               &kp F5                  &mmv MOVE_UP            &kp F6           &kp F7               &kp F8                &kp F9           &kp F10           &kp DELETE
&kp LS(TAB)     &kp BSLH        &kp LC(LA(LEFT))   &kp LA(UP)             &kp LC(LA(RIGHT))    &td_square                &mmv MOVE_DOWN          &kp LC(Z)         &kp LC(LEFT)         &kp UP                &kp LC(RIGHT)    &kp PIPE         &kp LS(EQUAL)
&trans          &kp LC(A)        &kp LC(LEFT)       &kp LA(DOWN)           &kp LC(RIGHT)        &td_curly                &mmv MOVE_LEFT          &kp RBRC         &kp LEFT             &kp DOWN              &kp RIGHT        &kp LS(APOS)         &kp LS(SEMI)
&trans          &kp LC(Y)        &kp LC(X)          &kp LC(C)          &td_pst              &kp FSLH                &mmv MOVE_RIGHT         &kp BSLH         &kp LG(LS(S))        &kp F11               &kp F12          &kp STAR          &kp LS(MINUS)
&kp C_MUTE      &trans           &trans             &trans             &trans               &trans                  &mkp LCLK               &trans           &trans               &trans                &trans           &trans
            >;

            display-name = "LOWER";
            sensor-bindings = <&inc_dec_kp C_VOLUME_UP C_VOL_DN>;
        };

        /* =====================================================================
        * LAYER2 — Bluetooth / Output / System / RGB
        * ===================================================================== */
        layer_2 {
            bindings = <
&kp TILDE  &bt BT_SEL 0  &bt BT_SEL 1   &bt BT_SEL 2  &bt BT_SEL 3  &bt BT_SEL 4     &mmv MOVE_UP     &rgb_ug RGB_EFF  &rgb_ug RGB_EFR  &none       &bt BT_CLR      &none        &trans
&trans     &none         &none          &none         &none          &none           &mmv MOVE_DOWN   &rgb_ug RGB_SPD  &rgb_ug RGB_SPI  &none       &out OUT_BLE    &rgb_ug RGB_COLOR_HSB(270,40,100)       &rgb_ug RGB_COLOR_HSB(0,100,100)
&caps_word &none         &none          &none         &none          &none           &mmv MOVE_LEFT   &rgb_ug RGB_BRD  &rgb_ug RGB_BRI  &none       &out OUT_USB    &rgb_ug RGB_COLOR_HSB(240,30,100)       &rgb_ug RGB_COLOR_HSB(0,0,100)
&trans     &none        &none           &none         &none          &none           &mmv MOVE_RIGHT  &rgb_ug RGB_HUD  &rgb_ug RGB_HUI  &none       &none           &rgb_ug RGB_COLOR_HSB(10,50,100)       &rgb_ug RGB_COLOR_HSB(45,75,100)
&trans     &trans        &trans         &trans        &trans         &trans          &mkp LCLK        &trans           &trans           &trans      &trans          &rgb_ug RGB_TOG
            >;

            display-name = "RAISE";
            sensor-bindings = <&scroll_encoder>;
        };

    };
};
